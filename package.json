{
  "name": "la-casa-de-pastel",
  "version": "1.1.0",
  "description": "Sistema PDV e Cardápio Online - La Casa de Pastel",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "start:desktop": "electron .",
    "build:mac": "electron-packager . \"La Casa de Pastel\" --platform=darwin --arch=arm64 --icon=icons/LogoLaCasa.icns --out=dist --overwrite",
    "build:win": "electron-builder --win --x64",
    "build:linux": "electron-packager . \"La Casa de Pastel\" --platform=linux --arch=x64 --out=dist --overwrite",
    "build:dmg": "electron-builder --mac dmg --arm64"
  },
  "build": {
    "appId": "com.lacasadepastel.app",
    "productName": "La Casa de Pastel",
    "copyright": "Copyright © 2026 La Casa de Pastel",
    "directories": {
      "output": "dist/installers"
    },
    "mac": {
      "icon": "icons/LogoLaCasa.icns",
      "category": "public.app-category.food-and-drink",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "title": "Instalar La Casa de Pastel",
      "icon": "icons/LogoLaCasa.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "axios": "^1.13.6",
    "express": "^4.18.2",
    "firebase": "^9.23.0",
    "open": "^10.1.0",
    "puppeteer": "^24.37.5"
  },
  "devDependencies": {
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "electron-packager": "^17.1.2"
  }
}